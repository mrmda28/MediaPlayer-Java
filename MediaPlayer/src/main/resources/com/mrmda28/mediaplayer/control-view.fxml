<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>

<BorderPane fx:id="controlView" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <HBox>
            <Button fx:id="previousButton">
                <HBox.margin>
                    <Insets left="4.0" right="2.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="controlButton">
                <HBox.margin>
                    <Insets left="2.0" right="2.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="nextButton">
                <HBox.margin>
                    <Insets left="2.0" right="2.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="stopButton">
                <HBox.margin>
                    <Insets left="2.0" right="4.0" />
                </HBox.margin>
            </Button>
            <BorderPane.margin>
                <Insets left="10.0" right="5.0"/>
            </BorderPane.margin>
        </HBox>
    </left>
    <center>
        <BorderPane fx:id="trackBorder">
            <left>
                <Label fx:id="currentTimeLabel" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets left="2.0" right="2.0"/>
                    </BorderPane.margin>
                </Label>
            </left>
            <center>
                <Slider fx:id="trackSlider"/>
            </center>
            <right>
                <Label fx:id="durationTimeLabel" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets left="2.0" right="2.0"/>
                    </BorderPane.margin>
                </Label>
            </right>
            <BorderPane.margin>
                <Insets left="5.0" right="5.0"/>
            </BorderPane.margin>
        </BorderPane>
    </center>
    <right>
        <BorderPane fx:id="volumeBorder">
            <left>
                <ImageView fx:id="minVolumeImageView" BorderPane.alignment="CENTER">
                    <Image url="@images/minVolume.png"/>
                    <BorderPane.margin>
                        <Insets left="2.0" right="2.0"/>
                    </BorderPane.margin>
                </ImageView>
            </left>
            <center>
                <Slider fx:id="volumeSlider"/>
            </center>
            <right>
                <ImageView fx:id="maxVolumeImageView" BorderPane.alignment="CENTER">
                    <Image url="@images/maxVolume.png"/>
                    <BorderPane.margin>
                        <Insets left="2.0" right="2.0"/>
                    </BorderPane.margin>
                </ImageView>
            </right>
            <BorderPane.margin>
                <Insets left="5.0" right="10.0"/>
            </BorderPane.margin>
        </BorderPane>
    </right>
</BorderPane>
